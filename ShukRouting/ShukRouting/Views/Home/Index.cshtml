
@{
    ViewBag.Title = "Index";
}
@section scripts{

    @*<script src="~/Scripts/angular.js"></script>*@
    @*@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")*@

    <script type="text/x-jquery-tmpl" src="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.10/jquery.validate.unobtrusive.js")">
    </script>
}
<div>
    <h3>Your best and easiest way to get your best out of your shopping</h3>
</div>
<div class="row">
    <div class="col-lg-offset-8">
        <div class="input-group">
            <input style="align-content:center" class="form-control" type="text" placeholder="Search for..." />
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    @{
                        @Ajax.ActionLink("Search", "Details", "StallController", new AjaxOptions
                        {
                            UpdateTargetId = "parial",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"
                        })
                    }
                </button>
            </span>
        </div>
    </div>
    <div class="col-md-2" id="parial">Par</div>

</div>




