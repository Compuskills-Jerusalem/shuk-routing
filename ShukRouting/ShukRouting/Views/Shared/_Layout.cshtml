<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Style/MainStyle.css")
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shuk Routing", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                    </div>
                    <button type="submit" class="btn btn-default">
                        @{
                            @Ajax.ActionLink("Search", "Details", "Stall", new AjaxOptions
                            {
                                UpdateTargetId = "par",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "GET"
                            })
                        }
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content" id="container">
        <div id="body">
            @RenderBody()
            <div id="par"></div>
        </div>
        @*<hr />*@
        <div id="footer">
            <footer>
                <p> There's nothing better then the shuk with shuk routing !!!</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

    @Scripts.Render("~/bundles/unobtrusiveajax")
    @RenderSection("scripts", required: false)

</body>
</html>
