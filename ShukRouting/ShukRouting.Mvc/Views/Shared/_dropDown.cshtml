@using ShukRouting.Mvc.Models
@model IEnumerable<CommodityModel>
<div id="searchBar">
    @using (Html.BeginForm("Details", "Commodity", FormMethod.Get))
    {
        <div class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                @*@Html.DropDownListFor(model => model.CommodityID, new SelectList(Model.CommodityNames, "CommodityID", "CommodityName"), htmlAttributes: new*@
                @Html.DropDownList("ID", new SelectList(ViewBag.Commodities, "CommodityID", "CommodityName"), htmlAttributes: new

                {
                    @class = "form-control",
                    @id = "itemInput",
                    @type = "text",
                    @placeholder = "Search by item name."
                })
            </div>
            <button id="search" type="submit" class="btn btn-default">Search</button>
        </div>
    }
</div>
